<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arbaini.getih.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_profile" />


        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewProfile"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:text="Nama :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_nama_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewProfile"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/tv_nama"
            android:text="Yourname"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nama"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:text="Email :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_email_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/tv_email"
            android:text="Yourmail@mail.com"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_goldarah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_email"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:text="Golongan Darah :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_goldarah_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/tv_goldarah"
            android:text="A"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goldarah"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:text="Berat Badan :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bb_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goldarah"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/tv_bb"
            android:text="60"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bb_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goldarah"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/tv_bb_detail"
            android:text="Kg"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_datadiri_ubah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="Ubah" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
